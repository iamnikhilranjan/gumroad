<%
  images = local_assigns[:images] || []
%>

<div data-office-carousel>
  <div class="rounded-2xl overflow-hidden relative w-full">
    <div class="flex gap-6 md:gap-16 transition-transform duration-500 ease-in-out" data-office-carousel-slides>
      <% if images.length > 0 %>
        <div class="flex-shrink-0 rounded-2xl overflow-hidden min-w-full" data-clone="last">
          <%= image_tag images.last, alt: "Office image", class: "w-full h-full object-cover aspect-video" %>
        </div>
        <% images.each_with_index do |image, index| %>
          <div class="flex-shrink-0 rounded-2xl overflow-hidden min-w-full">
            <%= image_tag image, alt: "Office image #{index + 1}", class: "w-full h-full object-cover aspect-video" %>
          </div>
        <% end %>
        <div class="flex-shrink-0 rounded-2xl overflow-hidden min-w-full" data-clone="first">
          <%= image_tag images.first, alt: "Office image", class: "w-full h-full object-cover aspect-video" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex gap-6 justify-end mt-5">
    <button type="button" aria-label="Previous" data-office-carousel-prev class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:bg-gray-100">
      <svg class="w-5 h-5 text-dark-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button type="button" aria-label="Next" data-office-carousel-next class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:bg-gray-100">
      <svg class="w-5 h-5 text-dark-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</div>
<%= render "home/shared/loop_carousel" %>

