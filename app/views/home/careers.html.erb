<div class="min-h-screen">
  <div class="-mb-8 lg:-mb-20">
    <%= render "home/shared/header",
      bg_color: "dark-gray",
      text_color: "white",
      subtitle: "Careers",
      title: "Build the road<br class=\"sm:hidden\"> <span class=\"whitespace-nowrap\">with us.</span>",
      description: "Join us to build the #1 tool for creators.",
      no_border: true,
      gap: "gap-8 md:gap-12" do %>
      <%= render "home/shared/button", text: "See open roles", url: "#open-roles", variant: "dark" %>
    <% end %>
  </div>

  <div class="relative bg-dark-gray">
    <div class="mx-auto px-8 max-w-7xl">
      <%= render "home/shared/office_carousel",
        images: [
          image_path("auth/background.png"),
          image_path("auth/background.png")
        ]
      %>
    </div>
  </div>

<div class="bg-dark-gray text-white pt-16 sm:pt-24 pb-32">
  <div class="flex flex-col justify-center gap-4 sm:gap-6 mx-auto text-center max-w-5xl mb-12 sm:mb-16 px-8 md:mb-28">
    <h2 class="text-4xl md:text-6xl lg:text-7xl">How we build</h2>
    <p class="text-lg md:text-2xl">We give you what you need to ship your best work.</p>
  </div>
  <%= render "home/shared/how_we_build",
    cards: [
      {
        icon: image_path("careers/flag.svg"),
        icon_bg: "pink",
        title: "Dumbo HQ",
        description: "We use our office for speed and remote for reach. High-bandwidth work, no matter where you sit."
      },
      {
        icon: image_path("careers/price.svg"),
        icon_bg: "green",
        title: "Honest pay",
        description: "We pay top-of-market for every role."
      },
      {
        icon: image_path("careers/calendar.svg"),
        icon_bg: "orange",
        title: "30-hour weeks",
        description: "Work to Live. 30 hours of work, then you're done. Use the extra time to build your own projects."
      },
      {
        icon: image_path("careers/comics.svg"),
        icon_bg: "red",
        title: "Fewer meetings",
        description: "We only meet when we're stuck. We prefer PRs and clear writing so you can stay in flow and out of Zoom."
      },
      {
        icon: image_path("careers/audience.svg"),
        icon_bg: "yellow",
        title: "Equity for all",
        description: "Every full-time hire gets equity. When Gumroad wins, the whole team wins. No exceptions."
      },
      {
        icon: image_path("careers/launch.svg"),
        icon_bg: "purple",
        title: "Build in public",
        description: "Our code is public. Fork the repo, ship a fix, and skip the line. We hire the people already building with us."
      }
    ]
  %>
  </div>

  <%= render "home/shared/job_listings",
    jobs: @jobs.map { |job| job.merge(url: job_path(job[:slug])) }
  %>

  <div class="px-8 pb-16 lg:px-[4vw] lg:pb-24">
    <div class="flex flex-col gap-8 lg:gap-16 max-w-5xl mx-auto items-center">
      <h1 class="font-medium text-4xl sm:text-5xl lg:text-7xl text-center">Not looking for a full-time role? Help us build in public.</h1>
      <%= render "home/shared/button", text: "Contribute on GitHub", url: "https://github.com/antiwork/gumroad" %>
    </div>
  </div>

  <%= image_tag "about/new-sale.svg", alt: "Gumroad illustration", class: "w-full min-h-[300px] object-cover" %>

  <%= render "home/shared/footer" %>
</div>
